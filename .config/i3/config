## I3wm config by Jervw ##
include ~/.config/i3/bindings
include ~/.config/i3/modes
include ~/.config/i3/colors
include ~/.config/i3/exec

# font
font pango:JetBrainsMono Nerd Font 12

# gaps
gaps inner 20
smart_gaps on

# bon
smart_borders on
default_border pixel 2
default_floating_border pixel 2

# window rules
for_window [title="^scratch$"] move scratchpad
for_window [class="feh"] floating enable
for_window [title="Friends List"] floating enable

# bar
bar {
    font pango:JetBrainsMono Nerd Font 12
    position top
    tray_output primary
    status_command /usr/bin/i3status-rs ~/.config/i3/bar/bar.toml
    colors {
        separator #11111b
        background #181825

        focused_workspace #74c7ec #74c7ec #ffffff
        active_workspace #333333 #333333 #ffffff
        inactive_workspace #333333 #333333 #888888
        urgent_workspace #2f343a #900000 #ffffff
    }
}

